<!-- This page renders the follow and unfollow
 buttons based
 on the current relationship status-->

<% unless current_user?(@user) %>
	<div id="follow_form">
		<% if current_user.following?(@user) %>
			<%= render 'layouts/shared/unfollow' %>
		<% else %>
			<%= render 'layouts/shared/follow' %>
		<% end %>
	</div>
<% end %>